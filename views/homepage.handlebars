<div>
  <button class = "btn" style = "width:100%; height:5rem;" id = "makeNewPost">
    <div>+</div>
    <div>New Post</div>
  </button>
</div>
{{#if hasPosts}}
  {{#each posts as |post| }}
  <div class="row align-center mb-5">
    <div class="col-md-6">
      <h2>{{{get_emoji}}} {{user.name}}</h2>
    </div>
    <div class="col-md-6">
      <h3><a href="mailto:{{user.email}}">{{user.email}}</a></h3>
    </div>
  </div>
  {{/each}}
{{else}}
  <div class = "p-5" style = "border-radius: 1rem">
    <div>There doesn't seem to be any posts.</div>
  </div>

{{/if}}