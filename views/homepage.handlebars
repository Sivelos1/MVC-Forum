<div class = "makeNewPost">
  <button class = "btn" style="display: flex; justify-content: center; align-content: middle; width:100%; height:5rem;">
    <div>Make A New Post</div>
  </button>
</div>
<div style = "display: flex; flex-direction: column;">
{{#if posts}}
  {{#each posts as |post| }}
  <div class="row align-center mb-5">
    <div class="col-md-6">
      <h2>this is a post my boy</h2>
    </div>
  </div>
  {{/each}}
{{else}}
  <div class = "p-5" style = "border-radius: 1rem">
    <div>There doesn't seem to be any posts.</div>
  </div>
{{/if}}
</div>

<script src = "/js/homepage.js"></script>