<form class = "makeNewPost">
  <button class = "btn" style="display: flex; justify-content: center; align-content: middle; width:100%; height:5rem;">
    <div>Make A New Post</div>
  </button>
</form>
<div style = "display: flex; flex-direction: column;">
{{#if posts}}
  {{#each posts as |post| }}
  <div class="row align-center mb-5">
    <a href = "./posts/{{post.id}}" style = "background-color: lightgray; padding: 1rem; border-radius: 1rem;">
      <div style = "text-color: black;">
        <div style = "display: flex; justify-content: space-between">
          <h2>{{post.title}}</h2>
          <div>{{post.time}}</div>
        </div>
        <p style = "background-color: white; padding: 1rem; border-radius: 1rem; width:100%">{{post.content}}</p>
        <div>By Author Name</div>
      </div>
    </a>
  </div>
  {{/each}}
{{else}}
  <div class = "p-5" style = "border-radius: 1rem; display:flex; justify-content:center">
    <div>There doesn't seem to be any posts.</div>
  </div>
{{/if}}
</div>

<script src = "/js/homepage.js"></script>