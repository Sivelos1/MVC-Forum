<div class = "post">
    <div style = "display: flex; justify-content: space-between">
        <h2>
            {{post.title}}
        </h2>
        <div>
            {{post.time}}
        </div>
    </div>
    <div>
        <p> 
            {{post.content}}
        </p>
    </div>
    <div style = "display: flex; justify-content: space-between">
        <div>
            Leave a comment!
        </div>
    </div>
    <div>
        {{#if logged_in}}
        <form class = "form comment-box">
            <div class="form-group">
                <input class="form-input" type="text" id="comment-content"/>
            </div>
            <div class="form-group">
                <button class="btn btn-primary" type="submit">submit</button>
            </div>
        </form>
        {{/if}}
        {{#if show_comments}}
            {{#each comments as |comment| }}
            <div class="row align-center mb-5">
                <div class="col-md-6">
                    <p>{{comment.content}}</p>
                    <div style = "display:flex; justify-content: space-between">
                        <div>
                            {{comment.author}}
                        </div>

                    </div>
                </div>
            </div>
            {{/each}}
        {{/if}}
    </div>
</div>

<script src = "/public/js/"></script>