<div style = "display:flex; justify-content: space-between">
  <section style = "width:100%; padding: 1rem;">
    <h2>Create A New Post</h2>

    <form class="form new-post">
      <div class="form-group">
        <label for="post-title">Title:</label>
        <input class="form-input" type="text" id="post-title"/>
      </div>
      <div class="form-group">
        <input class="form-input" type="text" id="post-content" style = "height: 6rem;" />
      </div>
      <div style = "display:flex; justify-content: space-between">
        <form class="submit-group">
          <button class="btn btn-primary" type="submit" id = "submit-button">submit</button>
        </form>
        <form class="cancel-group">
          <button class="btn btn-primary" type="submit" id = "cancel-button">cancel</button>
        </form>
      </div>
    </form>
  </section>
</div>



